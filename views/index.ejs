<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fake Chats</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h3>All Chats!</h3>
    <form action="/chats/new" method="GET">
      <button>New Chat</button>
    </form>

    <% for(let chat of chats) { %>
  <div class="chat">
    <p>From: <i><%= chat.from %></i></p>
    <div class="msg">
      <form action="/chats/<%= chat._id %>/edit" method="GET">
        <button>Edit</button>
      </form>

     <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST" style="display:inline;">
  <button type="submit" onclick="return confirm('Are you sure you want to delete this chat?');">Delete</button>
</form>

      <form action="/chats/<%= chat._id %>" method="GET">
        <button>Show</button>
      </form>

      <p>Message: <%= chat.msg %></p>
    </div>
    <p>Received By: <i><%= chat.to %></i></p>
    <hr />
    <p>Time: <%= chat.created_at.toString().split(" ")[4] %></p>
    <p>Date: <%= chat.created_at.toString().split(" ").slice(0, 4).join(" ") %></p>
  </div>
  <br /><br />
<% } %>
  </body>
</html>
